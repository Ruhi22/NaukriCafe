<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ApplyUploadCV">


    <LinearLayout
        android:id="@+id/ll_pictureJobTilte"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp">
            <ImageView
                android:id="@+id/iv_backApplyUpload"
                android:layout_width="14dp"
                android:layout_height="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="12dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/back_arrow"/>
        </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_profileUploadedCV"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:paddingTop="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:background="@drawable/gray_rounded_border"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="24dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.15">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:src="@drawable/pdf_icon"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_applicantName2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AkshatJain - CV - Full Stack"
                android:textSize="14sp"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto"/>

            <TextView
                android:id="@+id/tv_cvSize2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="670 kb"
                android:textSize="12sp"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/roboto"/>

        </LinearLayout>

    </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_profilePhotoTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="24dp"
            android:visibility="visible">
            <ImageView
                android:layout_width="86dp"
                android:layout_height="86dp"
                android:src="@drawable/tabler_icon_coin_rupee"
                android:background="@drawable/rounded_corner"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="12dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fullstack"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    android:textColor="@color/black"
                    android:paddingTop="16dp"
                    android:fontFamily="@font/roboto"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Web Developer"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:fontFamily="@font/roboto"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_cvUploadApplication"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        android:paddingBottom="32dp"
        android:layout_below="@id/ll_pictureJobTilte"
        android:background="@drawable/top_only_shadow"
        android:paddingTop="32dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:visibility="visible">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload CV"
            android:fontFamily="@font/roboto"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/uploadCVInstruction"
            android:fontFamily="@font/roboto"
            android:textSize="14sp"
            android:textStyle="normal"
            android:textColor="@color/colorGrayLight"
            android:layout_marginTop="16dp"/>

        <LinearLayout
            android:id="@+id/ll_beforeUploadCV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="32dp"
            android:layout_marginTop="36dp"
            android:background="@drawable/dotted_rounded_border"
            android:visibility="visible">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_addCV"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/plus_icon"
                android:backgroundTint="@color/colorPrimary"
                android:elevation="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/clickToAddCV"
                android:fontFamily="@font/roboto"
                android:textSize="14sp"
                android:textStyle="normal"
                android:textColor="@color/colorGrayLight"
                android:layout_marginTop="16dp"/>
        </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_afterUploadCV"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:orientation="horizontal"
        android:paddingTop="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/gray_rounded_border"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.15">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:src="@drawable/pdf_icon"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_applicantName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AkshatJain - CV - Full Stack"
                android:textSize="14sp"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto"/>

            <TextView
                android:id="@+id/tv_cvSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="670 kb"
                android:textSize="12sp"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/roboto"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_undoCVUpload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Undo"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:layout_gravity="right"
        android:layout_marginTop="24dp"
        android:layout_marginRight="24dp"
        android:visibility="gone"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_cvUploadDone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        android:paddingBottom="32dp"
        android:layout_below="@id/ll_pictureJobTilte"
        android:background="@drawable/top_only_shadow"
        android:paddingTop="64dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:gravity="center_horizontal"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/check_circle_icon"
            android:backgroundTint="@color/colorPrimary"
            android:padding="16dp"
            android:background="@drawable/circle_color_primary"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/youHaveApplied"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="24dp"
            android:paddingBottom="12dp"
            android:fontFamily="@font/roboto"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/jobAppliedDescription"
            android:textSize="14sp"
            android:textStyle="normal"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/roboto"/>





    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_applyButton"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="vertical"
        android:baselineAligned="true"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_marginBottom="24dp"
        android:paddingBottom="8dp"
        android:visibility="visible">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="4dp">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_applyJob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Apply Now"
                android:textAllCaps="false"
                android:textColor="@color/colorGrayLight"
                android:background="@drawable/rounded_button_disabled"
                android:elevation="4dp"
                android:textStyle="bold"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:theme="@style/ButtonStlyeMain"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_discoverMoreJobs"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="vertical"
        android:baselineAligned="true"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_marginBottom="96dp"
        android:paddingBottom="8dp"
        android:visibility="gone">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="4dp">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_discoverMoreJobs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Discover More Jobs"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:background="@drawable/rounded_button"
                android:elevation="4dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:theme="@style/ButtonStlyeMain"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_backToHome"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="vertical"
        android:baselineAligned="true"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_marginBottom="32dp"
        android:paddingBottom="8dp"
        android:visibility="gone">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="4dp">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_backToHome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Back To Home"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:background="@drawable/rounded_button_disabled"
                android:elevation="4dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:theme="@style/ButtonStlyeMain"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</RelativeLayout>